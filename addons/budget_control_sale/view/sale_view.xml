<?xml version="1.0" ?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_order_form">
            <field name="name">sale.form.view.inherit.budget.control.sale</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Budget Transactions" attrs="{'invisible':[('budget_move_ids','=',[])]}">
                        <field name="budget_move_ids"/>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</openerp>