<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="assign_budget_period_form_view" model="ir.ui.view">
            <field name="name">assign.budget.period.form.view</field>
            <field name="model">assign.budget.period</field>
            <field name="arch" type="xml">
                <form string="Assign Budget Period">
                    <group>
                        <group>
                            <field name="period_id" required="1"/>
                            <field name="account_period_ids" options="{'no_create':True}">
                                <tree>
                                    <field name="name" string="Name"/>
                                    <field name="code"/>
                                    <field name="budget_period_id"/>
                                    <field name="date_start" string="Start"/>
                                    <field name="date_stop" string="End"/>
                                    <field name="state"/>
                                    <field name="company_id"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                    <footer>
                        <button string="To Assign" name="to_assign_account_period" type="object"
                                class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Asistente para asignar Periodo Presupuestal -->
        <act_window
            id="action_assign_budget_period"
            name="Assign Budget Period"
            res_model="assign.budget.period"
            src_model="account.period"
            view_mode="tree,form"
            target="new"
            key2="client_action_multi"
            view_id="assign_budget_period_form_view"/>
    </data>
</openerp>
