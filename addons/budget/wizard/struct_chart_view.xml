        <record id="budget_struct_chart_form_view" model="ir.ui.view">
            <field name="name">budget.struct.chart.form.view</field>
            <field name="model">budget.struct.chart</field>
            <field name="arch" type="xml">
                <form string="Struct Charts">
                    <group>
                        <group>
                            <field name="struct_parent_id"/>
                            <field name="analytic_acc_id"/>
                        </group>
                        <group>
                            <field name="budget_period_id"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Open Charts" name="struct_chart_open_window" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

