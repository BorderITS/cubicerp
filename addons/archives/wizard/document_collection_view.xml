<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="document_collection_view_form" model="ir.ui.view">
            <field name="name">Invoice Order</field>
            <field name="model">archives.document.collection</field>
            <field name="arch" type="xml">
                <form string="Add to Collection">
                    <p class="oe_grey">
                        Select how you want to add documents to a collection. This
                        will create a collection or update a existing one that can be modified
                        later.
                    </p>
                    <group>
                        <field name="what_t2" class="oe_inline" />
                        <field name="qtty" invisible="1"/>
                        <div attrs="{'invisible': [('what_t2', '=', 'add')]}">
                            <field name="name" attrs="{'required': [('what_t2', '=', 'new')]}" />
                            <field name="parent_id" />
                            <field name="description" />
                        </div>
                        <field name="collection_id" attrs="{'invisible': [('what_t2', '=', 'new')]}"/>
                        <field name="document_ids" attrs="{'invisible': [('what_t2', 'not in', ['new', 'add'])]}"/>
                    </group>
                    <footer>
                        <button name="create_collection" string="Create and View Collection" type="object"
                            context="{'open_collection': True}" class="oe_highlight"
                            attrs="{'invisible': [('what_t2', '=', 'add')]}"/>
                        <button name="create_collection" string="Create Collection" type="object"
                            class="oe_highlight"
                            attrs="{'invisible': [('what_t2', '=', 'add')]}"/>
                        <button name="create_collection" string="Update and View Collection" type="object"
                            context="{'open_collection': True}" class="oe_highlight"
                            attrs="{'invisible': [('what_t2', '=', 'new')]}"/>
                        <button name="create_collection" string="Update Collection" type="object"
                            class="oe_highlight"
                            attrs="{'invisible': [('what_t2', '=', 'new')]}"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</openerp>
