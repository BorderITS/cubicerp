<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="attachment_wizard_view" model="ir.ui.view">
            <field name="name">attachment.wizard.form</field>
            <field name="model">attachment.wizard</field>
            <field name="arch" type="xml">
                <form string="Attachment">
                    <group>
                            <!--<field name="version_new" />-->
                            <field name="version_id"  />
                            <!--<field name="attachment_id" />-->
                            <separator string="Attachmets previous versions" />
                            <field name="attachment_version_ids" nolabel="1" options="{'no_create': True}">
                                <tree>
                                    <field name="name"/>
                                    <field name="archive_version_id"/>
                                    <field name="attachment_template_id" />
                                    <field name="datas" filename="datas_fname"/>
                                </tree>
                            </field>

                            <separator string="News attachmets" />
                            <field name="attachment_new_ids" nolabel="1" >
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="attachment_template_id"/>
                                    <field name="datas" filename="datas_fname"/>
                                </tree>
                                <form>
                                    <field name="name"/>
                                    <field name="attachment_template_id"/>
                                    <field name="datas" />
                                    <field name="description" />
                                </form>
                            </field>
                           <!-- <field name="attachment_new_ids" nolabel="1" >
                                <field name="name"/>
                                <field name="attachment_template_id"/>
                                <field name="datas"/>
                            </field>-->

                    </group>
                    <fotter>
                        <button string="Save" name="save_version" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </fotter>
               </form>
            </field>
        </record>


        <record id="attachment_wizard_action" model="ir.actions.act_window">
            <field name="name">Attachment</field>
            <field name="res_model">attachment.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="attachment_wizard_view"/>
            <field name="context">{
                'arch_document_id': active_id,
                'arch_partner_id': context.get('partner_id'),
                }
            </field>
            <field name="target">new</field>
        </record>


        <record id="view_attachment_new_tree" model="ir.ui.view">
            <field name="name">archives.attachment.tree</field>
            <field name="model">ir.attachment</field>
            <field name="arch" type="xml">
                <tree string="Attachment List">
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="type"/>
                    <field name="datas" filename="datas_fname"/>
                </tree>
            </field>
        </record>

    </data>
</openerp>