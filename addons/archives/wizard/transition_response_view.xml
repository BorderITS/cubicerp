<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="archives_transition_response_view_form" model="ir.ui.view">
            <field name="name">archives.transaction.response form</field>
            <field name="model">archives.transition.response</field>
            <field name="arch" type="xml">
                <form string="Transition Response" version="7.0">
                    <div name="wzd_params" invisible="1">
                    </div>

                    <footer>
                        <button name="action_response" string="Acept" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="transition_response" model="ir.actions.act_window">
		    <field name="name">Transition Response</field>
            <field name="type">ir.actions.act_window</field>
		    <field name="res_model">archives.transition.response</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
            <field name="view_id" ref="archives_transition_response_view_form"/>
            <field name="target">new</field>
	    </record>

    </data>
</openerp>