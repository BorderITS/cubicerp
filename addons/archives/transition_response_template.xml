<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="transition_response_params">
            <t t-set="response_params_invisible" t-value="int(not response_field_defs)"/>
            <div name="wzd_params" t-att-invisible="response_params_invisible">
                <t t-foreach="response_field_defs" t-as="field_def">
                    <label t-attf-for="{{field_def['name']}}" />
                    <field t-attf-name="{{field_def['name']}}" t-attf-string="{{field_def['string']}}"/>
                </t>
            </div>
        </template>
    </data>
</openerp>
