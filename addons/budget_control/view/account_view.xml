<?xml version="1.0" ?>
<openerp>
    <data>

        <record model='ir.ui.view' id='view_account_journal_form'>
			<field name='name'>account.journal.form.inherit.budget</field>
			<field name='model'>account.journal</field>
			<field name='inherit_id' ref='account.view_account_journal_form'/>
			<field name='arch' type='xml'>
                <xpath expr="//field[@name='entry_posted']" position="after">
                    <field name="budget_move_posted"/>
                </xpath>
			</field>
		</record>

        <record model='ir.ui.view' id='view_move_form'>
			<field name='name'>account.move.form.inherit.budget</field>
			<field name='model'>account.move</field>
			<field name='inherit_id' ref='account.view_move_form'/>
			<field name='arch' type='xml'>
                <xpath expr="//notebook" position="inside">
                    <page string="Budget Transactions" attrs="{'invisible':[('budget_move_ids','=',[])]}">
                        <field name="budget_move_ids"/>
                    </page>
                </xpath>
			</field>
		</record>


    </data>
</openerp>


