<?xml version="1.0" ?>
<openerp>
    <data>

        <record model='ir.ui.view' id='view_budget_struct_tree'>
            <field name='name'>budget.struct.tree.inherit.budget</field>
            <field name='model'>budget.struct</field>
            <field name='inherit_id' ref='budget.view_budget_struct_tree'/>
            <field name='arch' type='xml'>
                <xpath expr="//field[@name='type']" position="after">
                    <field name="available" invisible="context.get('show_amounts', False)"/>
                    <field name="committed" invisible="context.get('show_amounts', False)"/>
                    <field name="provision" invisible="context.get('show_amounts', False)"/>
                    <field name="paid" invisible="context.get('show_amounts', False)"/>
                </xpath>

                <field name="planned_amount" invisible="context.get('show_amounts', False)"/>
                <field name="practical_amount" invisible="context.get('show_amounts', False)"/>
                <field name="available_amount" invisible="context.get('show_amounts', False)"/>

            </field>
        </record>

        <record model='ir.ui.view' id='view_budget_struct_form'>
            <field name='name'>budget.struct.form.inherit.budget</field>
            <field name='model'>budget.struct</field>
            <field name='inherit_id' ref='budget.view_budget_struct_form'/>
            <field name='arch' type='xml'>
                <xpath expr="//group[@name='one']" position="after">
                    <group name="two">
                        <field name="available"/>
                        <field name="committed"/>
                        <field name="provision"/>
                        <field name="paid"/>
                    </group>
                    <group string="Verify Amount Overload">
                        <field name="verify_available"/>
                        <field name="verify_committed"/>
                        <field name="verify_provision"/>
                        <field name="verify_paid"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</openerp>


