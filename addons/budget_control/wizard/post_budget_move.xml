<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="post_budget_move_form_view" model="ir.ui.view">
            <field name="name">post.budget.move.form.view</field>
            <field name="model">post.budget.move</field>
            <field name="arch" type="xml">
                <form string="Post Budget Move">
                    <group>
                        <group>
                            <field name="budget_move_ids" options="{'no_create':True}">
                                <tree>
                                    <field name="name" string="Name"/>
                                    <!--<field name="ref"/>-->
                                    <field name="period_id"/>
                                    <field name="date"/>
                                    <field name="company_id"/>
                                    <!--<field name="account_move_id"/>-->
                                    <field name="state"/>
                                    <field name="available"/>
                                    <field name="committed"/>
                                    <field name="provision"/>
                                    <field name="paid"/>
                                    <field name="total_amount"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                    <footer>
                        <button string="Post" name="multi_post_budget_move" type="object"
                                class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action to open the wizard to post several Budget Move -->
        <act_window
            id="action_post_budget_move"
            name="Post Budget Move"
            res_model="post.budget.move"
            src_model="budget.move"
            view_mode="tree,form"
            target="new"
            key2="client_action_multi"
            view_id="post_budget_move_form_view"/>
    </data>
</openerp>
