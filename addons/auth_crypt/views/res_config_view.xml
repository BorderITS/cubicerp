<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_auth_settings" model="ir.ui.view">
            <field name="name">auth.config.settings.form</field>
            <field name="model">auth.config.settings</field>
            <field name="inherit_id" ref="base.res_config_auth_settings"/>
            <field name="arch" type="xml">
                <group name="schedule_control" position="after">
                    <group>
                        <label for="id" string="Password Strength"/>
                        <div>
                            <p>
                                <label string="This section allows you to determine password complexity"/>
                            </p>
                            <div>
                                <field name="pwd_min_character" class="oe_inline"/>
                                <label for="pwd_min_character"/>
                            </div>
                            <div>
                                <field name="pwd_has_capital_letter" class="oe_inline"/>
                                <label for="pwd_has_capital_letter"/>
                            </div>
                            <div>
                                <field name="pwd_has_digit" class="oe_inline"/>
                                <label for="pwd_has_digit"/>
                            </div>
                            <div>
                                <field name="pwd_has_special_letter" class="oe_inline"/>
                                <label for="pwd_has_special_letter"/>
                            </div>
                        </div>
                    </group>
                </group>
            </field>
        </record>
    </data>
</openerp>
